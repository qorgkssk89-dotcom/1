    <script>
      const slides = document.querySelector(".slides");
      const slideCount = slides.children.length;
      let index = 0;

      function showSlide(idx) {
        slides.style.transform = `translateX(-${idx * 100}%)`;
      }

      // 자동 슬라이드
      setInterval(() => {
        index = (index + 1) % slideCount;
        showSlide(index);
      }, 3000);
    </script>
